<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            
            <h5 class="mb-3 text-muted">Account Details</h5>
            
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                    type="text" 
                    name="username"  
                    id="username"
                    class="form-control"
                    required
                >
                <div class="invalid-feedback">A valid username is required</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input 
                    type="email" 
                    name="email" 
                    id="email"
                    class="form-control"
                    required
                >
                <div class="invalid-feedback">Please provide a valid email</div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    id="password" 
                    class="form-control"
                    required
                >
                <div class="invalid-feedback">Password is required</div>
            </div>

            <hr class="my-4">

            <h5 class="mb-3 text-muted">Personal Information</h5>

            <div class="mb-3">
                <label for="name" class="form-label">Full Name</label>
                <input 
                    type="text" 
                    name="name" 
                    id="name" 
                    class="form-control"
                    required
                >
                <div class="invalid-feedback">Name is required</div>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="age" class="form-label">Age</label>
                    <input 
                        type="number" 
                        name="age" 
                        id="age" 
                        min="12"
                        class="form-control"
                        required
                    >
                    <div class="invalid-feedback">You must be at least 12 years old</div>
                </div>
                
                <div class="mb-3 col-md-8">
                    <label for="gender" class="form-label">Gender</label>
                    <select name="gender" class="form-control" required>
                        <option value="" disabled selected>Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                    <div class="invalid-feedback">Please select a gender</div>
                </div>
            </div>

            <div class="mb-3"> 
                <label for="address" class="form-label">Address</label>
                <textarea 
                    name="address" 
                    id="address" 
                    class="form-control"
                    rows="3"
                    required
                ></textarea>
                <div class="invalid-feedback">Address is required</div>
            </div>
            
            <button class="btn btn-success mt-3">Register</button>
            <br><br>
        </form>
    </div>
</div>